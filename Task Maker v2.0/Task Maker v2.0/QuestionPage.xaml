<Page x:Class="Task_Maker_v2._0.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task_Maker_v2._0"
      mc:Ignorable="d" 
      d:DesignHeight="662" d:DesignWidth="1185"
      Title="QuestionPage" Loaded="Page_Loaded">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="338*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" HorizontalAlignment="Left" BorderThickness="2" Height="500" Margin="48.1,5,0,0" VerticalAlignment="Top" Width="763" Grid.Column="1">
            <RichTextBox x:Name="questionInput" Background="White"></RichTextBox>
        </Border>
        <Button x:Name="save" FontSize="35" Style="{StaticResource one}" Content="СОХРАНИТЬ" HorizontalAlignment="Left" Margin="48.1,571,0,0" VerticalAlignment="Top" Width="300" Height="85" Grid.Column="1"/>
        <Button x:Name="cancel" FontSize="35" Style="{StaticResource one}" Content="ОТМЕНА" HorizontalAlignment="Left" Margin="511.1,571,0,0" VerticalAlignment="Top" Width="300" Height="85" Grid.Column="1" Click="cancel_Click"/>

    </Grid>
</Page>
