      mc:Ignorable="d" 
     d:DesignHeight="662" d:DesignWidth="1185"
      Title="mainS">

    <Grid Style="{StaticResource main}">



        <Button x:Name="Start" Style="{StaticResource two}" BorderThickness="4"   HorizontalAlignment="Left" Margin="304,227,0,0" VerticalAlignment="Top" Width="622" Height="186" Click="Start_Click">
