        <Button x:Name="Creators" Style="{StaticResource ResourceKey=one}" Content="Создатели"  HorizontalAlignment="Left" Margin="600,0,-0.2,0" VerticalAlignment="Top" Width="585" Height="80"/>
        <Button x:Name="Exit_Copy" Style="{StaticResource ResourceKey=one}" Content="О программе"   HorizontalAlignment="Left" Margin="0,582,0,0" VerticalAlignment="Top" Width="600" Height="80"/>

    </Grid>
